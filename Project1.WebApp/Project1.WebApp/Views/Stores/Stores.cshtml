@{
}

@model IEnumerable<StoreViewModel>

@{
    ViewData["Title"] = "Stores";
}

<h1>Our Locations</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StoreId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StoreId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.ActionLink("Inventory", "InventoryDetails", new { id=item.StoreId }) |
                    @Html.ActionLink("Order History", "StoreOrders", new { id = item.StoreId }) 
                </td>
            </tr>
        }
    </tbody>
</table>