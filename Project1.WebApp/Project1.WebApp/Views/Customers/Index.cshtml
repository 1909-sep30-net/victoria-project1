@{
}

@model IEnumerable<CustomerViewModel>

@{
    ViewData["Title"] = "Customers";
}

<h1>Our Customers</h1>

<p>
    <a asp-action="Create">Create New Customer</a>
</p>
<p>
    <a asp-action="Search">Search Customers</a>
</p>
<table class="table">
    <caption>Current Customer List</caption>
    <thead>
        <tr>
            
            <th id="Id">CustomerId>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th id="FirstName">FirstName>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th id="LastName">LastName>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.ActionLink("Place Order", "PlaceOrder", new { id = item.Id }) |
                    @Html.ActionLink("Order History", "CustomerOrders", "Orders", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>