@{
}

@model IEnumerable<CustomerViewModel>

@{
    ViewData["Title"] = "Customers";
}

<h1>Our Customers</h1>

<p>
    <a asp-action="Create">Create New Customer</a>
</p>
<p>
    <a asp-action="Search">Search Customers</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)  
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.ActionLink("Place Order", "Place Order", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Order History", "Order History", new { /* id=item.PrimaryKey */ }) 
                </td>
            </tr>
        }
    </tbody>
</table>